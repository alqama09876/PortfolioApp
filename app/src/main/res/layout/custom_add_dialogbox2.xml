<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/jobTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/Jobtitle"
                android:textColor="@color/grey_black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_jobTitle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/jobTitle"
                android:fontFamily="@font/poppins_light"
                android:inputType="text"
                android:textColor="@color/grey_black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/TimeDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/jobTitle"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/TimeDuration"
                android:textColor="@color/grey_black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_timeDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edt_jobTitle"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/TimeDuration"
                android:fontFamily="@font/poppins_light"
                android:inputType="text"
                android:textColor="@color/grey_black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/Skills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TimeDuration"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/Skills"
                android:textColor="@color/grey_black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_skills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edt_timeDuration"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/TimeDuration"
                android:fontFamily="@font/poppins_light"
                android:inputType="text"
                android:textColor="@color/grey_black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/updateBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edt_skills"
                android:layout_marginTop="25dp"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_medium"
                android:background="@color/grey_black"
                android:text="@string/update" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>







