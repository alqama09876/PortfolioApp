<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <ImageView
                android:id="@+id/certificate_pic"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/custom_bg2" />


            <TextView
                android:id="@+id/p_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/certificate_pic"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/PName"
                android:textColor="@color/grey_black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_pname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/certificate_pic"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@id/p_name"
                android:fontFamily="@font/poppins_light"
                android:inputType="text"
                android:textColor="@color/grey_black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/projectDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/p_name"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/pdescription"
                android:textColor="@color/grey_black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_projectDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edt_pname"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/projectDescription"
                android:fontFamily="@font/poppins_light"
                android:inputType="text"
                android:textColor="@color/grey_black"
                android:textSize="12sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>